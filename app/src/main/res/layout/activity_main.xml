<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="APLICACIONES MOVILES Y SERVICIOS TELEMATICOS"
            android:gravity="center_horizontal"
            android:textSize="36dp"
            android:textStyle="bold"
            android:paddingTop="25dp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Examen Final"
            android:paddingTop="30dp"
            android:textSize="25dp"
            android:gravity="center_horizontal"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jefferson Aquiles Baquerizo Cornejo"
            android:paddingLeft="30dp"
            android:paddingTop="30dp"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dariane Elisa Medranda Machado"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:textSize="18dp"/>

    </LinearLayout>


    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/btnMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:fab_colorNormal="#109DFA"
        app:fab_colorPressed="#109DFA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnDatos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="#024A86"
            app:fab_icon="@drawable/datos"
            app:fab_size="mini"
            android:onClick="DatoSensados"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnBateria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="#024A86"
            app:fab_icon="@drawable/bateria"
            app:fab_size="mini"
            android:onClick="EstadoBateria"/>

    </com.getbase.floatingactionbutton.FloatingActionsMenu>


</androidx.constraintlayout.widget.ConstraintLayout>